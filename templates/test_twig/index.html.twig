{% extends 'base.html.twig' %}

{% block title %}Hello TestTwigController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{varFromController}}
    {# commentaires #}
    {% set obj={
        'fname':'jhon',
        'lname':'Doe'
    }  %}

    {{obj['fname']}}
    {{obj['lname']}}

    {% set v ="test" %}
    {{v}}

    <table>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
        {% for p in tabP %}
        {% if p.id == 1 %}
            <tr>
                <td>{{p.id}}</td>
                <td>{{p.username|upper}}</td>
                <td>{{p.email}}</td>
            </tr>
        {%endif%}
        {% endfor %}
    </table>
    Nombre de personnes = {{tabP|length}}
