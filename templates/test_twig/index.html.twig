    <h3>Pas d'element</h3>
    {%endif%}
    {%if 5 not in [1,2,3,5]%}
    <h3>5 non présent</h3>
    {%else%}
    <h3>5 présent</h3>
    {%endif%}
    <a href="{{path('app_teacher')}}">Go to teacher</a>
    <a href="{{path('show_teacher',{'name':v})}}">Go to teacher 2</a>
    <img src="{{asset('hello.png')}}" >
</div>
{% endblock %}
